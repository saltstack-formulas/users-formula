users:
## Minimal required pillar values
  auser:
    groups:
      - admin

## Full list of pillar values
  buser:
    fullname: B User
    sudouser: True
    sudo_rules: 
      - buser ALL=(root) /usr/bin/find
      - buser ALL=(otheruser) /usr/bin/script.sh
    shell: /bin/bash
    prime_group:
      name: primarygroup
      gid: 500
    groups:
      - users
    ssh_keys:
      privkey: PRIVATEKEY
      pubkey: PUBLICKEY
    ssh_auth:
      - ssh-rsa: PUBLICKEYKEYKEY

absent_users:
  - donald
  - bad_guy
